{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Annual Electricity Consumption by Australian States",
    "width": 800,
    "height": 600,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/MZ244/Data-Visualization2--A2/refs/heads/main/ne_110m_admin_0_countries.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",  
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/MZ244/Data-Visualization2--A2/refs/heads/main/reformatted_electricity_consumption_1999_2024.csv",
            "format": {"type": "csv"}
          },
          "key": "State",  
          "fields": ["State Code"]  
        }
      }
      
    ],
    "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1},
    "encoding": {
      "color": {
        "field": "Total_Consumption",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [1000, 5000, 10000],  
          "range": ["#fdbe85", "#fd8d3c", "#e6550d"]
        },
        "legend": {"title": "Electricity Consumption (GWh)"}
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "State"},  
        {"field": "State Code", "type": "quantitative", "title": "Total Electricity Consumption (GWh)"}
      ]
    }
  }
  