{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Annual Electricity Consumption by Australian States",
    "width": 800,
    "height": 600,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/MZ244/Data-Visualization2--A2/refs/heads/main/ne_110m_admin_0_countries.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",  
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/MZ244/Data-Visualization2--A2/refs/heads/main/AER_Demand%20and%20energy_Annual%20electricity%20consumption%20NEM%20DATA_2_20240730131706.CSV",
            "format": {"type": "csv"}
          },
          "key": "State", 
          "fields": ["Queensland", "New South Wales", "Victoria", "South Australia", "Tasmania", "Snowy", "NEM"]
        }
      },
      {
        "calculate": "datum['New South Wales'] + datum.Queensland + datum.Victoria + datum['South Australia'] + datum.Tasmania + datum.Snowy",
        "as": "Total_Consumption"
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Total_Consumption",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [1000, 5000, 10000],
          "range": ["#fdbe85", "#fd8d3c", "#e6550d"]
        }
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "State"},  
        {"field": "Total_Consumption", "type": "quantitative", "title": "Total Electricity Consumption (GWh)"}
      ]
    }
  }
  